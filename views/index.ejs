                        </path>
                        <path fill="#4a254b"
                            d="m50,73c2.57,0,4.68-1.94,4.97-4.43.03-.3-.19-.57-.49-.57-1.73,0-7.22,0-8.95,0-.3,0-.53.27-.49.57.28,2.49,2.4,4.43,4.97,4.43Z">
                        </path>
                        <circle cx="39.5" cy="61.5" r="5.5" fill="#fff"></circle>
                        <circle cx="39.5" cy="61.5" r="2.5" fill="#4a254b"></circle>
                        <circle cx="60.5" cy="61.5" r="5.5" fill="#fff"></circle>
                        <circle cx="60.5" cy="61.5" r="2.5" fill="#4a254b"></circle>
                        <path fill="#6b96d6"
                            d="m68.63,31.42h10.08c-.41-1.06-1.03-2.04-1.85-2.87-4.58-4.6-9.13-9.28-13.6-13.94-.9-.94-2-1.64-3.21-2.07l.02,10.32c.01,4.72,3.84,8.54,8.56,8.54Z">
                        </path>
                    </svg>
                </div>
            </div>

        </div>
    </header>
    <main>
        <div class="container">

        </div>
        <div class="container">
            <div class="column" id="upload-section">
                <h2>Upload Files</h2>
                <form id="uploadForm" class="upload-form" enctype="multipart/form-data">
                    <input type="file" name="file" id="fileInput" class="file-input">
                    <button type="submit" class="upload-button">Upload</button>
                </form>
                <div id="loader" style="display: none;">
                    <svg xmlns="http://www.w3.org/2000/svg" class="spinner" viewBox="0 0 50 50">
                        <circle cx="25" cy="25" r="20" fill="none" stroke="#4a90e2" stroke-width="5"
                            stroke-dasharray="100,200" stroke-linecap="round">
                            <animateTransform attributeName="transform" type="rotate" repeatCount="indefinite" dur="1s"
                                keyTimes="0;1" values="0 25 25;360 25 25" />
                        </circle>
                    </svg>
                </div>

                <div id="notification" class="notification">
                    Notification
                </div>
            </div>
            <div class="columns">
                <!-- Upload Files Section -->
                <!-- Download Files Section -->
                <div class="column" id="download-section">
                    <h2>Files List</h2>
                    <ul id="filelist" class="file-list">
                        <!-- Files will be loaded here -->
                    </ul>
                </div>
                <!-- Live Ticker Section -->
                <div class="column" id="ticker-section">
                    <h2>Ticker</h2>
                    <table class="ticker">
                        <thead>
                            <tr>
                                <td>User</td>
                                <td>Event</td>
                                <td>File</td>
                                <td>Timestamp</td>
                            </tr>
                        </thead>
                        <tbody id="ticker">

                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </main>
    <footer>
        <div class="container">
            <div class="footer-content">
                <div>
                    Â© 2024 OST
                </div>
                <div>
                    CLDE - Cloud Development
                </div>
            </div>
        </div>
    </footer>


    <script src="/app.js"></script>
</body>

</html>